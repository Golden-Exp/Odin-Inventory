<body>
  <div class="pokemon-grid">
    <% for (let i = 0; i < pokemon.length; i++) { %>
      <div class="pokemon-card">
        <img src="<%= pokemon[i].sprite %>" alt="sprite of <%= pokemon[i].pokemon %>">
        <h2><%= pokemon[i].pokemon %></h2>
        <p><strong>Type 1:</strong> <%= pokemon[i].type %></p>
        <p><strong>Type 2:</strong> <%= pokemon[i].type2 %></p>
        <p><strong>Region:</strong> <%= pokemon[i].region %></p>
        <p><strong>Trainer:</strong> <%= pokemon[i].trainer %></p>
        <div class="buttons">
          <form method="get", action="/edit/<%= pokemon[i].id %>">
            <button class="delete" type="submit"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e3e3e3"><path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"/></svg></button>
          </form>
          <form method="post", action="/delete/<%= pokemon[i].id %>">
            <button class="delete" type="submit"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e3e3e3"><path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/></svg></button>
          </form>
        </div>
      </div>
    <% } %>
  </div>

  <div style="text-align: center;">
    <button class="add-button" onclick="window.location.href='/new'">Add New Pok√©mon</button>
  </div>
</body>
<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    background-color: #f0f2f5;
    padding: 20px;
    margin: 0;
  }

  .pokemon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 20px;
  }

  .pokemon-card {
    background: white;
    border-radius: 12px;
    padding: 16px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    text-align: center;
    transition: transform 0.2s ease;
  }

  .pokemon-card:hover {
    transform: translateY(-5px);
  }

  .pokemon-card img {
    width: 120px;
    height: 120px;
    object-fit: contain;
  }

  .buttons{
    display: flex;
    justify-content: center;
    gap: 30px;
  }

  .delete{
    background-color: white;
    border: 0;
  }

  .delete > svg{
    fill: rgb(46, 46, 46);
    cursor: pointer;
  }

  .pokemon-card h2 {
    margin: 10px 0 5px;
    font-size: 20px;
    color: #333;
  }

  .pokemon-card p {
    margin: 4px 0;
    font-size: 14px;
    color: #555;
  }

  .add-button {
    display: inline-block;
    margin-top: 30px;
    padding: 10px 20px;
    background-color: #ff4757;
    color: white;
    border: none;
    border-radius: 8px;
    text-decoration: none;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .add-button:hover {
    background-color: #e84118;
  }
</style>

